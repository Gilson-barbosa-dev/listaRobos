<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Login - Clube Quant</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/output.css" rel="stylesheet">
</head>
<body class="bg-gradient-to-br from-black via-gray-900 to-black text-white min-h-screen flex items-center justify-center font-sans">

  <div class="bg-gray-900 p-8 rounded-2xl shadow-lg w-full max-w-md">
    <!-- Logo -->
    <div class="flex justify-center mb-6">
      <img src="/img/logo_clube_quant2.webp" alt="Clube Quant" class="w-40">
    </div>

    <!-- Título -->
    <h1 class="text-2xl font-bold text-center mb-6 flex items-center justify-center gap-2">
      <i data-lucide="lock" class="w-6 h-6 text-blue-400"></i>
      <span>Acessar Clube Quant</span>
    </h1>

    <!-- Mensagem de erro -->
    <% if (erro) { %>
      <p class="text-red-500 text-center mb-4"><%= erro %></p>
    <% } %>

    <!-- Formulário -->
    <form action="/login" method="POST" class="space-y-4">
      <input 
        type="email" name="email" placeholder="Digite seu e-mail" required
        class="w-full px-4 py-2 rounded-lg bg-gray-800 text-white border border-gray-700 focus:ring-2 focus:ring-blue-500"
      >
      <input 
        type="password" name="senha" placeholder="Digite sua senha" required
        class="w-full px-4 py-2 rounded-lg bg-gray-800 text-white border border-gray-700 focus:ring-2 focus:ring-blue-500"
      >
      <button type="submit" 
        class="w-full flex items-center justify-center gap-2 bg-blue-600 hover:bg-blue-500 text-white py-2 rounded-lg font-semibold transition">
        <i data-lucide="log-in" class="w-5 h-5"></i>
        Entrar
      </button>
    </form>

    <!-- Links extras -->
    <div class="mt-6 text-center text-sm text-gray-400">
      <p>
        Esqueceu sua senha? 
        <a href="/recuperar" class="text-blue-400 hover:underline">Recuperar acesso</a>
      </p>
      <p class="mt-2">
        Não tem conta? 
        <a href="/register" class="text-green-400 hover:underline">Criar conta</a>
      </p>
    </div>
  </div>

  <script src="https://unpkg.com/lucide@latest"></script>
  <script>
    lucide.createIcons();
  </script>
</body>
</html>
