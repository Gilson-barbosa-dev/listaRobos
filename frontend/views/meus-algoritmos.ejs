<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Meus Algoritmos - Clube Quant</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="/output.css" rel="stylesheet">
  <script src="https://unpkg.com/lucide@latest"></script>
  <script>
    document.addEventListener("DOMContentLoaded", () => { lucide.createIcons(); });
  </script>
</head>
<body class="bg-gradient-to-br from-black via-gray-900 to-black text-white min-h-screen font-sans">

  <!-- Sidebar -->
  <%- include("partials/sidebar", { page: "meus-algoritmos" }) %>

  <!-- Conte√∫do -->
  <main class="ml-64 p-6 flex-1">
    <div class="max-w-6xl mx-auto">

      <!-- T√≠tulo -->
      <h1 class="text-2xl font-bold mb-6">Meus Algoritmos</h1>

      <!-- KPIs -->
      <div class="grid grid-cols-2 md:grid-cols-5 gap-4 max-w-6xl mx-auto mt-6">
        <div class="bg-gray-900 rounded-xl shadow-md p-5 text-center">
          <span id="kpi-vencedoras" class="block text-5xl font-bold text-white">0</span>
          <small class="text-gray-400">Estrat√©gias Vencedoras</small>
        </div>
        <div class="bg-gray-900 rounded-xl shadow-md p-5 text-center">
          <span id="kpi-perdedoras" class="block text-5xl font-bold text-white">0</span>
          <small class="text-gray-400">Estrat√©gias Perdedoras</small>
        </div>
        <div class="bg-gray-900 rounded-xl shadow-md p-5 text-center">
          <span id="kpi-trades" class="block text-5xl font-bold text-white">0</span>
          <small class="text-gray-400">Total de Trades</small>
        </div>
        <div class="bg-gray-900 rounded-xl shadow-md p-5 text-center">
          <span id="kpi-lucro" class="block text-5xl font-bold text-white">0</span>
          <small class="text-gray-400">Lucro Total</small>
        </div>
        <div class="bg-gray-900 rounded-xl shadow-md p-5 text-center">
          <span id="kpi-fator-lucro" class="block text-5xl font-bold text-white">0</span>
          <small class="text-gray-400">Fator de Lucro</small>
        </div>
      </div>

      <!-- Cards -->
      <div id="painel" class="max-w-6xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mt-10"></div>
    </div>
  </main>

  <!-- Modal Hist√≥rico -->
  <div id="modalHistorico" class="hidden fixed inset-0 z-[9999] items-center justify-center bg-black/70">
    <div class="bg-gradient-to-br from-gray-800 to-gray-900 border border-quant-purple/30 rounded-2xl p-6 shadow-lg w-full max-w-3xl relative flex flex-col">
      <button onclick="fecharModalHistorico()" class="absolute top-3 right-3 text-gray-400 hover:text-white">
        <i data-lucide="x" class="w-6 h-6"></i>
      </button>
      <h2 class="text-lg font-bold mb-4 text-white">Hist√≥rico da Estrat√©gia</h2>
      <div class="grafico-container flex flex-col">
        <canvas id="graficoHistorico" class="w-full h-[300px]"></canvas>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="/Script.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", async () => {
      await carregarEstrategias();
      atualizarFavoritos();
    });

    // üîπ Atualizar a tela s√≥ com os favoritos
    function atualizarFavoritos() {
      const favoritos = getFavoritos();
      const filtrados = estrategiasGlobais.filter(e => favoritos.includes(e.magic));
      renderizarEstrategias(filtrados);
    }

    // üîπ Intercepta cliques no toggleFavorito para atualizar a p√°gina em tempo real
    document.addEventListener("click", (e) => {
      if (e.target.closest("button[onclick^='toggleFavorito']")) {
        setTimeout(atualizarFavoritos, 100); // delay curto para atualizar lista
      }
    });
  </script>
</body>
</html>
