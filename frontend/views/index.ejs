<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Painel de Estrat√©gias - Clube Quant</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="/output.css" rel="stylesheet">
  <script src="https://unpkg.com/lucide@0.321.0/dist/umd/lucide.min.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", () => { lucide.createIcons(); });
  </script>
  <script>
  window.tipoUsuario = "<%= tipoUsuario %>";
</script>
<link rel="icon" type="image/png" sizes="32x32" href="/img/favicon.png">
<link rel="apple-touch-icon" sizes="180x180" href="/img/favicon.png">
<meta name="theme-color" content="#000000">
</head>
<body class="bg-gradient-to-br from-black via-gray-900 to-black text-white min-h-screen font-sans">

  <!-- Sidebar fixo -->
  <%- include("partials/sidebar", { page: "index" }) %>

  <!-- Conte√∫do principal -->
  <main class="ml-64 p-6 flex-1">
    <div class="max-w-6xl mx-auto">
      <!-- Top bar -->
    <div class="flex flex-col md:flex-row gap-4 justify-center items-center mb-6">

      <!-- üîç Busca -->
      <div class="relative w-full md:w-64">
        <i data-lucide="search" class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400"></i>
        <input 
          type="text" 
          placeholder="Magic ou Ativo..."
          class="w-full pl-9 pr-4 py-2 rounded-lg bg-gray-800 border border-gray-700 text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:outline-none"
        >
      </div>

      <!-- üìä Ordena√ß√£o -->
      <div class="relative w-full md:w-40">
        <i data-lucide="bar-chart-3" class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-blue-400"></i>
        <select 
          name="ordenar"
          class="w-full pl-9 pr-8 py-2 rounded-lg bg-gray-800 border border-gray-700 text-white focus:ring-2 focus:ring-blue-400 focus:outline-none appearance-none"
        >
          <option value="lucro_total">Lucro Total</option>
          <option value="assertividade">Assertividade</option>
          <option value="operacoes">Opera√ß√µes</option>
        </select>
        <i data-lucide="chevron-down" class="absolute right-3 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400 pointer-events-none"></i>
      </div>

      <!-- üß™ Filtro de status (Admin apenas) -->
       <% if (tipoUsuario === "admin") { %>
      <div class="relative w-full md:w-40" id="filtroWrapper">
        <i data-lucide="filter" class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-purple-400"></i>
        <select
          id="filtroStatus"
          class="w-full pl-9 pr-8 py-2 rounded-lg bg-gray-800 border border-gray-700 text-white focus:ring-2 focus:ring-purple-400 focus:outline-none appearance-none"
        >
          <option value="todas">Todas</option>
          <option value="aprovadas">Aprovadas</option>
          <option value="teste">Em Teste</option>
        </select>
        <i data-lucide="chevron-down" class="absolute right-3 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400 pointer-events-none"></i>
      </div>
      <% } %>

    </div>


      <!-- Dashboard consolidado -->
      <div class="p-6 bg-gray-800 rounded-xl shadow-md">
        <canvas id="graficoDiario" height="120"></canvas>
      </div>
        
      <!-- KPIs -->
      <div class="grid grid-cols-2 md:grid-cols-5 gap-4 mt-6">
        <div class="bg-gray-900 rounded-xl shadow-md p-5 text-center">
          <span id="kpi-vencedoras" class="block font-bold text-white text-4xl leading-tight tracking-tight">0</span>
          <small class="text-gray-400">Estrat√©gias Vencedoras</small>
        </div>
        <div class="bg-gray-900 rounded-xl shadow-md p-5 text-center">
          <span id="kpi-perdedoras" class="block font-bold text-white text-4xl leading-tight tracking-tight">0</span>
          <small class="text-gray-400">Estrat√©gias Perdedoras</small>
        </div>
        <div class="bg-gray-900 rounded-xl shadow-md p-5 text-center">
          <span id="kpi-trades" class="block font-bold text-white text-4xl leading-tight tracking-tight">0</span>
          <small class="text-gray-400">Total de Trades</small>
        </div>
        <div class="bg-gray-900 rounded-xl shadow-md p-5 text-center">
          <span id="kpi-fator-lucro" class="block font-bold text-white text-4xl leading-tight tracking-tight">0</span>
          <small class="text-gray-400">Fator de Lucro</small>
        </div>
        <div class="bg-gray-900 rounded-xl shadow-md p-5 text-center">
          <span id="kpi-lucro" class="block font-bold text-green-400 text-4xl leading-tight tracking-tight">$0.00</span>
          <small class="text-gray-400">Lucro Total</small>
        </div>
      </div>

      <!-- Cards -->
      <div id="painel" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mt-10"></div>
    </div>
  </main>

  <!-- Modal Hist√≥rico -->
  <div id="modalHistorico" class="hidden fixed inset-0 z-[9999] items-center justify-center bg-black/70">
    <div class="bg-gradient-to-br from-gray-800 to-gray-900 border border-quant-purple/30 rounded-2xl p-6 shadow-lg w-full max-w-3xl relative flex flex-col">
      <button onclick="fecharModalHistorico()" class="absolute top-3 right-3 text-gray-400 hover:text-white">
        <i data-lucide="x" class="w-6 h-6"></i>
      </button>
      <h2 class="text-lg font-bold mb-4 text-white">Hist√≥rico da Estrat√©gia</h2>
      <div class="grafico-container flex flex-col">
        <canvas id="graficoHistorico" class="w-full h-[300px]"></canvas>
      </div>
    </div>
  </div>

  <!-- Modal Estat√≠stica -->
  <div id="modalEstatistica"
      class="hidden fixed inset-0 z-[9999] flex items-center justify-center bg-black/70 px-4">
    <div class="bg-gradient-to-br from-gray-800 to-gray-900 border border-quant-purple/30 rounded-2xl p-6 shadow-lg w-full max-w-5xl relative flex flex-col"
        style="max-height: 90vh; height: auto;">

      <!-- Bot√£o Fechar -->
      <button onclick="fecharModalEstatistica()" 
        class="absolute top-3 right-3 text-gray-400 hover:text-white">
        <i data-lucide="x" class="w-6 h-6"></i>
      </button>

      <!-- üîπ T√≠tulo din√¢mico -->
      <h2 id="tituloEstatistica" class="text-lg font-bold mb-4 text-white text-center">
        Estat√≠sticas da Estrat√©gia
      </h2>

      <!-- üîπ Informa√ß√µes principais -->
      <div id="infoEstrategia" class="grid grid-cols-2 md:grid-cols-4 gap-3 mb-5 text-sm">
        <div class="bg-gray-900/70 rounded-lg p-3 text-center border border-gray-700">
          <span class="block text-gray-400 text-xs uppercase">Magic</span>
          <span id="infoMagic" class="text-white font-semibold">---</span>
        </div>
        <div class="bg-gray-900/70 rounded-lg p-3 text-center border border-gray-700">
          <span class="block text-gray-400 text-xs uppercase">Operacional</span>
          <span id="infoTipo" class="text-white font-semibold">---</span>
        </div>
        <div class="bg-gray-900/70 rounded-lg p-3 text-center border border-gray-700">
          <span class="block text-gray-400 text-xs uppercase">Time Frame</span>
          <span id="infoTimeframe" class="text-white font-semibold">---</span>
        </div>
        <div class="bg-gray-900/70 rounded-lg p-3 text-center border border-gray-700">
          <span class="block text-gray-400 text-xs uppercase">Capital M√≠nimo</span>
          <span id="infoCapital" class="text-white font-semibold">---</span>
        </div>
      </div>

      <!-- üîπ Imagem de Estat√≠stica -->
      <img id="imagemEstatistica"
          src=""
          alt="Estat√≠sticas"
          class="rounded-lg shadow-md object-contain w-full"
          style="max-height: calc(90vh - 180px);">

    </div>
  </div>


  <!-- Scripts -->
  <script>
  document.addEventListener("DOMContentLoaded", () => {
    // üîí Se n√£o for admin, esconder o filtro de status
    if (window.tipoUsuario !== "admin") {
      const filtro = document.getElementById("filtroWrapper");
      if (filtro) filtro.classList.add("hidden");
    }
  });
</script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="/Script.js"></script>
</body>
</html>
